<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="MyCardViewStyle" parent="Theme.AppCompat">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPaddingBottom">15dp</item>
        <item name="contentPaddingTop">15dp</item>
        <item name="contentPaddingLeft">18dp</item>
        <item name="contentPaddingRight">18dp</item>
    </style>

    <style name="MyStyleButton">
        <item name="android:background">@drawable/button_main</item>
    </style>

    <style name="CornersForLayout">
        <item name="android:background">@drawable/coreners_for_layout</item>
    </style>


</resources>
